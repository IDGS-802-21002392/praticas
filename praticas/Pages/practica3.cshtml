@page
@model praticas.Pages.practica3Model
@{
}
<div class="container">

	<h1>Practica 3</h1>

	<form method="post">
		<div class="form-group">
			<label for="A">a</label>
			<input type="number" class="form-control" id="A" name="A" asp-for="A" required step="0.1">
		</div>
		<div class="form-group">
			<label for="B">b</label>
			<input type="number" class="form-control" id="B" asp-for="B" required step="0.1" />
		</div>
		<div class="form-group">
			<label for="X">x</label>
			<input type="number" class="form-control" id="X" asp-for="X" required step="0.1" />
		</div>
		<div class="form-group">
			<label for="Y">y</label>
			<input type="number" class="form-control" id="Y" asp-for="Y" required step="0.1" />
		</div>
		<div class="form-group">
			<label for="N">n</label>
			<input type="number" class="form-control" id="N" asp-for="N" required step="0.1" />
		</div>


		<button type="submit" class="btn btn-primary">Calcular</button>
	</form>


	@if (Model.Result != "Resultado")
	{
		<div class="alert alert-info mt-3">
			<p>El resultado del binomio es de @Model.Result</p>

		</div>

	}
	@if (!ModelState.IsValid)
	{
		<div class="alert alert-danger mt-3">
			<ul>
				@foreach (var modelStateEntry in ModelState.Values)
				{
					foreach (var error in modelStateEntry.Errors)
					{
						<li>@error.ErrorMessage</li>
					}
				}
			</ul>
		</div>
	}


</div>
